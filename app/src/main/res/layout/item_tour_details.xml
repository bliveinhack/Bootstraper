<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/stime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="09:00 PM"
        android:textColor="?attr/colorPrimary" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <View
                android:id="@+id/br3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/topw"
                android:background="@color/bg" />

            <LinearLayout
                android:id="@+id/topw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33CCCCCC"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/stype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_calendar"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Hotel"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_action_small_user"
                    android:gravity="center_vertical"
                    android:text="13/10/2018" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/br3"
                android:background="#33cccccc"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_details"
                    android:gravity="center_vertical"
                    android:text="HO-1 | HOTEL 1"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/br"
                    android:drawableLeft="@drawable/ic_action_name"
                    android:gravity="center_vertical"
                    android:text="TGB"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/extranotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_pen"
                    android:gravity="center_vertical"
                    android:text="Extra Notes"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

            <View
                android:id="@+id/br"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/t2"
                android:layout_marginBottom="3dp"
                android:background="@color/bg" />

            <LinearLayout
                android:id="@+id/bw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/br"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/br"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_action_location"
                        android:gravity="center_vertical"
                        android:text="Service Is okay" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/br"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_action_call"
                        android:gravity="center_vertical"
                        android:paddingRight="8dp"
                        android:text="+91 1234568"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_action_more" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
